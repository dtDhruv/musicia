<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Table</title>
    <link rel="icon" href="note.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<style>
    @import 'tailwindcss/base';
    @import 'tailwindcss/components';
    @import 'tailwindcss/utilities';
    
    /* Add your custom styles here */
    
    body {
        background-color: #1a202c;
        color: white;
        font-family: 'Arial', sans-serif;
    }
    
    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        border-spacing: 0;
        border: 2px solid #2d3748; /* Dark color for the table border */
        /* Add rounded corners */
        border-radius: 8px;
    }
    
    table th,
    table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #4a5568;
        border-right: 1px solid #4a5568;
    }
    
    table thead tr th {
        background-color: rgba(56, 161, 105, 0.8); /* Light green background color with some transparency */
        color: #fff;
    }
    
    table tbody tr:last-child td {
        border-bottom: none; /* Remove border for the last row */
    }
    
    table tbody tr:hover {
        background-color: #4a5568;
        color: #fff;
    }
    
    @media screen and (min-width: 768px) {
        .formstyle {
            margin-left: 15%;
            margin-right: 15%;
        }
    }
    
    @media screen and (min-width: 1024px) {
        .formstyle {
            margin-left: 20%;
            margin-right: 20%;
        }
    }
    
    #myVideo {
        position: fixed;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }    
</style>
<body>
    <video autoplay muted loop id="myVideo">
        <source src="admin_back.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="container mx-auto">
        <center>
            <h1 class="text-3xl font-semibold mb-6 mt-10 text-white">User Table</h1>
        </center>
        <!-- Add rounded class to the table -->
        <table class="w-full rounded">
            <thead>
                <tr>
                    <th class="bg-green-100 bg-opacity-50 text-white py-2">User Email</th>
                    <th class="bg-green-200 bg-opacity-50 text-white py-2">Password</th>
                </tr>
            </thead>
            <tbody>
                <% for (const row of tableData) { %>
                    <tr class="transition-colors hover:bg-gray-700 hover:text-white">
                        <td class="py-2"><%= row.mail %></td>
                        <td class="py-2"><%= row.password %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
